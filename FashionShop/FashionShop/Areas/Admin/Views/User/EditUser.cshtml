@model Model.EF.user

@{
    ViewBag.Title = "Edit User";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section header {
    Sửa đổi thông tin User
}

<style>
    input:read-only {
        background-color: yellow;
    }
</style>

<div class="single-product-tab-area mg-b-30">
    <!-- Single pro tab review Start-->
    <div class="single-pro-review-area">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="review-tab-pro-inner">
                        <ul id="myTab3" class="tab-review-design">
                            <li class="active"><a href="#inforProducts"><i class="icon nalika-edit" aria-hidden="true"></i> Thông tin User</a></li>
                            @*<li><a href="#reviews"><i class="icon nalika-picture" aria-hidden="true"></i> Hình ảnh</a></li>*@
                        </ul>

                        <div id="myTabContent" class="tab-content custom-product-edit">
                            @using (Html.BeginForm("EditUser", "User", FormMethod.Post))
                            {
                                <div style="padding: 0 0 10px 15px;">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                </div>
                                <div class="product-tab-list tab-pane fade active in" id="inforProducts">
                                    <div class="row">
                                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                            <div class="review-content-section">
                                                <input type="hidden" class="form-control" value="@Model.user_id" name="user_id" placeholder="Nhập email" required readonly>

                                                <!-- add dropdownlist for group_user_id-->
                                                <div class="input-group mg-b-pro-edt">
                                                    <span class="input-group-addon"><i class="icon nalika-user" aria-hidden="true"></i></span>
                                                    <select id="user_group_id" name="user_group_id" class="form-control" required>
                                                        <option selected>-- Chọn nhóm user --</option>
                                                        <option value="ADMIN">Admin</option>
                                                        <option value="MOD">Quản lý</option>
                                                        <option value="MEMBER">Thành viên</option>
                                                    </select>
                                                </div>

                                                <div class="input-group mg-b-pro-edt">
                                                    <span class="input-group-addon"><i class="fa fa-barcode"></i></span>
                                                    <input type="email" class="form-control" value="@Model.email" name="email" placeholder="Nhập email" required readonly>
                                                </div>
                                                <div class="input-group mg-b-pro-edt">
                                                    <span class="input-group-addon"><i class="fa fa-barcode"></i></span>
                                                    <input name="phone" type="tel" value="@Model.phone" maxlength="10" spellcheck="false" oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*)\./g, '$1');" class="form-control" placeholder="Nhập số điện thoại" required>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                            <div class="review-content-section">
                                                <div class="input-group mg-b-pro-edt">
                                                    <span class="input-group-addon"><i class="icon nalika-user" aria-hidden="true"></i></span>
                                                    <input type="text" class="form-control" value="@Model.display_name" name="display_name" placeholder="Nhập tên hiển thị">
                                                </div>
                                                <div class="input-group mg-b-pro-edt">
                                                    <span class="input-group-addon"><i class="icon nalika-edit" aria-hidden="true"></i></span>
                                                    <input type="text" class="form-control" value="@Model.password" name="password" placeholder="Nhập mật khẩu">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <div class="text-center custom-pro-edt-ds">
                                            <button type="submit" class="btn btn-ctl-bt waves-effect waves-light m-r-10">
                                                Cập nhật
                                            </button>
                                            <a href="/Admin/quan-ly-user" class="btn btn-ctl-bt waves-effect waves-light">
                                                Hủy bỏ
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




