@model List<Model.EF.product>

<section class="women-collection">
    <div class="container">
        <header class="text-center">
            <h2 class="text-uppercase">Sản Phẩm Giảm Giá</h2>
        </header>
        <!-- Products Slider-->
        <div class="owl-carousel owl-theme products-slider">
            <!-- item-->
            @foreach (var item in Model)
            {
                <div class="item">
                    <div class="product is-gray">
                        <div class="image d-flex align-items-center justify-content-center">
                            <img src="/Contents/Images/@item.image" alt="product" class="img-fluid">
                            <div class="hover-overlay d-flex align-items-center justify-content-center">
                                <div class="CTA d-flex align-items-center justify-content-center">
                                    <a href="/them-vao-gio-hang?productId=@item.product_id&quantity=1" class="add-to-cart"><i class="fa fa-shopping-cart"></i></a>
                                    <a href="/chi-tiet/@item.alias-@item.product_id" class="visit-product active"><i class="icon-search"></i>Chi tiết</a>
                                    <a href="#" data-toggle="modal" data-target="#@item.product_id" class="quick-view"><i class="fa fa-arrows-alt"></i></a>
                                </div>
                            </div>
                        </div>
                        <div class="title">
                            <a href="/chi-tiet/@item.alias-@item.product_id">
                                <h3 class="h4 no-margin-bottom">@item.product_name</h3>
                            </a><span class="price text-muted">@item.price.GetValueOrDefault().ToString("N0")<sup>đ</sup></span>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>