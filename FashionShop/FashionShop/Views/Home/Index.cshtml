        <header class="text-center">
            <h2 class="text-uppercase">Sản Phẩm Mới Nhất</h2>
        </header>
        <!-- Products Slider-->
        <div class="owl-carousel owl-theme products-slider">
            <!-- item-->
            @*@foreach (var item in listNewProducts)
                {*@
            <div class="item">
                <div class="product is-gray">
                    <div class="image d-flex align-items-center justify-content-center">
                        <img src="/Contents/Images/" alt="product" class="img-fluid">
                        <div class="hover-overlay d-flex align-items-center justify-content-center">
                            <div class="CTA d-flex align-items-center justify-content-center"><a href="#" class="add-to-cart" title="Thêm vào giỏ"><i class="fa fa-shopping-cart"></i></a><a href="#" class="visit-product active"><i class="icon-search"></i>Xem chi tiết</a><a href="#" data-toggle="modal" data-target="" class="quick-view" title="Xem nhanh"><i class="fa fa-arrows-alt"></i></a></div>
