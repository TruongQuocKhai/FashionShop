<section class="blog">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <!-- post-->
                <div class="col-lg-6">
                    <div class="post post-gray d-flex align-items-center flex-md-row flex-column">
                        <div class="thumbnail d-flex-align-items-center justify-content-center"><img src="~/Contents/Images/@item.image" alt="..."></div>
                        <div class="info">
                            <h4 class="h5"> <a href="/chi-tiet-tin-tuc/@item.alias-@item.content_id">@item.content_name </a></h4><span class="date"><i class="fa fa-clock-o"></i>@item.created_date</span>
                            <p>@item.description</p>
                            <a href="/chi-tiet-tin-tuc/@item.alias-@item.content_id" class="read-more">
                                đọc thêm<i class="fa fa-long-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }
            <!-- /end post-->
        </div>
        <!-- Pagination -->
        <nav aria-label="..." class="d-block w-100">
            <ul class="pagination pagination-custom d-flex justify-content-between d-block w-100">
                <li class="page-item">
                    <a href="#" class="page-link">&lt; Older posts</a>
                </li>
                <li class="page-item disabled">
                    <a href="#" tabindex="-1" class="page-link">
                        Newer posts  &gt;
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</section>

